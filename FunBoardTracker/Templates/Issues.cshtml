@model FunBoardTracker.Templates.IssuesModel
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <style type="text/css">
        div.issue {
            width: 450px;
            height: 420px;
            padding: 10px 0px 10px 0px;            
        }

        div.odd {
            float: left;
        }

        div.even {
            float: right;
        }

        div.issue h1 {
            margin: 0px;
            display: block;
            height: 35px;
        }

        div.issue h3 {
            margin: 5px 0px 5px 0px;
            display: block;
            height: 40px;
        }

        div.issue div.info {
            padding-bottom: 5px;
        }

        div.issue div.assignee {
            border: 2px solid black;
            width: 150px;
            height: 150px;
            float: left;
        }

        div.issue img.tag {
            width: 250px;
            height: 250px;
            float: right;
        }

    </style>
</head>
<body>
    @{ var odd = true; }
    @foreach(var issue in Model.Issues) {
        <div class="issue @(odd ? "odd" : "even")" id="@issue.Id">
            <div class="info">
                <h1>@issue.Key</h1>
                <h3>@issue.Summary</h3>
                <span>Estimate: </span>@issue.EstimateStatistic.StatFieldValue.Value
            </div>
            <div class="assignee"></div>
            <img class="tag" src="data:image/png;base64,"/>
        </div>
        odd = !odd;
    }    
</body>
</html>